<button 
  id="theme-toggle"
  class="theme-toggle" 
  aria-label="테마 전환"
>
  <div class="toggle-track">
    <div class="toggle-thumb">
      <div class="toggle-icon">
        <svg class="sun-icon" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="5"/>
          <line x1="12" y1="1" x2="12" y2="3"/>
          <line x1="12" y1="21" x2="12" y2="23"/>
          <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
          <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
          <line x1="1" y1="12" x2="3" y2="12"/>
          <line x1="21" y1="12" x2="23" y2="12"/>
          <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
          <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
        </svg>
        <svg class="moon-icon" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
        </svg>
      </div>
    </div>
  </div>
</button>

<style>
  .theme-toggle {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    padding: 0.25rem;
    border: none;
    background: transparent;
    cursor: pointer;
  }

  .toggle-track {
    width: 50px;
    height: 26px;
    background-color: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 9999px;
    position: relative;
  }

  .toggle-thumb {
    width: 22px;
    height: 22px;
    background-color: var(--text-primary);
    border-radius: 50%;
    position: absolute;
    top: 1px;
    left: 1px;
    transition: transform 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .toggle-icon {
    color: var(--bg-secondary);
    height: 14px;
    width: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .sun-icon { display: none; }
  .moon-icon { display: block; }

  :global([data-theme="dark"]) .toggle-thumb {
    transform: translateX(24px);
  }

  :global([data-theme="dark"]) .sun-icon { display: block; }
  :global([data-theme="dark"]) .moon-icon { display: none; }
</style>

<script>
  import { toggleTheme } from '../utils/theme';
  
  const toggle = document.getElementById('theme-toggle');
  toggle?.addEventListener('click', () => {
    toggleTheme();
  });
</script> 
