---
interface Props {
  title: string;
}

import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../styles/global.css";
import Analytics from '@vercel/analytics/astro';

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" , initial-scale="1" />

    <title>astao</title>
    <meta name="description" content="Tao Blog" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/x-icon" href="/assets/img/favicon.ico" />

    <meta property="og:title" content={title} />
    <meta property="og:site_name" content="tao tech blog" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:image" content="/assets/img/" />
    <meta property="og:image:alt" content="Tao Blog" />
    <meta property="og:locale" content="en" />
    <meta property="og:description" content="Tao Blog" />
    <meta name="google-site-verification" content={import.meta.env.PUBLIC_GOOGLE_SITE_VERIFICATION} />
    <Analytics />
    <script type="text/javascript" src="https://cdn.jsdelivr.net/gh/welcome-toast/welcome-toast@refs/heads/feat/moreToasts/src/main.js"></script>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
